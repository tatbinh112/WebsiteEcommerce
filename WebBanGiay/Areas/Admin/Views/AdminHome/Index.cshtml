<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Multiple Charts Example</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .chart-container {
            display: flex;
            flex-wrap: wrap;
            width: 100%;
            height: 600px;
        }

        .chart-box {
            width: 48%; /* Biểu đồ cột và biểu đồ đường to hơn */
            margin: 1%;
        }

        .chart-box-small {
            width: 38%; /* Biểu đồ tròn nhỏ hơn */
            margin: 1%;
        }

        canvas {
            width: 100% !important;
            height: auto !important;
        }
    </style>
</head>
<body>
    <div class="chart-container">
        <div class="chart-box">
            <canvas id="barChart"></canvas>
        </div>
        <div class="chart-box">
            <canvas id="lineChart"></canvas>
        </div>
        <div class="chart-box-small">
            <canvas id="pieChart"></canvas>
        </div>
        <div class="chart-box">
            <canvas id="columnChart"></canvas>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("GetChartData", "AdminHome")',
                method: 'GET',
                success: function (data) {
                    // Bar Chart
                    const barCtx = document.getElementById('barChart').getContext('2d');
                    const barLabels = data.map(item => item.ProductName);
                    const barQuantities = data.map(item => item.Quantity);

                    new Chart(barCtx, {
                        type: 'bar',
                        data: {
                            labels: barLabels,
                            datasets: [{
                                label: '# of Shoes',
                                data: barQuantities,
                                borderWidth: 1,
                                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                                borderColor: 'rgba(54, 162, 235, 1)'
                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    });

                    // Pie Chart
                    const pieCtx = document.getElementById('pieChart').getContext('2d');

                    new Chart(pieCtx, {
                        type: 'pie',
                        data: {
                            labels: barLabels,
                            datasets: [{
                                label: '# of Shoes',
                                data: barQuantities,
                                backgroundColor: [
                                    'rgba(255, 99, 132, 0.2)',
                                    'rgba(54, 162, 235, 0.2)',
                                    'rgba(255, 206, 86, 0.2)',
                                    'rgba(75, 192, 192, 0.2)',
                                    'rgba(153, 102, 255, 0.2)',
                                    'rgba(255, 159, 64, 0.2)'
                                ],
                                borderColor: [
                                    'rgba(255, 99, 132, 1)',
                                    'rgba(54, 162, 235, 1)',
                                    'rgba(255, 206, 86, 1)',
                                    'rgba(75, 192, 192, 1)',
                                    'rgba(153, 102, 255, 1)',
                                    'rgba(255, 159, 64, 1)'
                                ],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: {
                                    position: 'top',
                                },
                                tooltip: {
                                    callbacks: {
                                        label: function(tooltipItem) {
                                            return tooltipItem.label + ': ' + tooltipItem.raw;
                                        }
                                    }
                                }
                            }
                        }
                    });

                    // Line Chart
                    $.ajax({
                        url: '@Url.Action("GetMonthlyRevenueData", "AdminHome")',
                        method: 'GET',
                        success: function (data) {
                            const lineCtx = document.getElementById('lineChart').getContext('2d');
                            const lineLabels = data.map(item => `${item.Month}/${item.Year}`);
                            const lineRevenues = data.map(item => item.Revenue);

                            new Chart(lineCtx, {
                                type: 'line',
                                data: {
                                    labels: lineLabels,
                                    datasets: [{
                                        label: 'Monthly Revenue',
                                        data: lineRevenues,
                                        borderWidth: 1,
                                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                                        borderColor: 'rgba(75, 192, 192, 1)',
                                        fill: true
                                    }]
                                },
                                options: {
                                    scales: {
                                        y: {
                                            beginAtZero: true
                                        }
                                    }
                                }
                            });
                        },
                        error: function (error) {
                            console.log("Error fetching data", error);
                        }
                    });

                    // Column Chart
                        $.ajax({
                            url: '@Url.Action("GetProductRevenueData", "AdminHome")',
                            method: 'GET',
                            success: function (data) {
                                // Column Chart
                                const columnCtx = document.getElementById('columnChart').getContext('2d');
                                const columnLabels = data.map(item => item.ProductName);
                                const columnRevenues = data.map(item => item.Revenue);

                                new Chart(columnCtx, {
                                    type: 'bar',
                                    data: {
                                        labels: columnLabels,
                                        datasets: [{
                                            label: 'Product Revenue',
                                            data: columnRevenues,
                                            borderWidth: 1,
                                            backgroundColor: 'rgba(255, 159, 64, 0.2)',
                                            borderColor: 'rgba(255, 159, 64, 1)'
                                        }]
                                    },
                                    options: {
                                        scales: {
                                            y: {
                                                beginAtZero: true
                                            }
                                        }
                                    }
                                });
                            },
                            error: function (error) {
                                console.log("Error fetching data", error);
                            }
                        });
                },
                error: function (error) {
                    console.log("Error fetching data", error);
                }
            });
        });
    </script>
</body>
</html>
