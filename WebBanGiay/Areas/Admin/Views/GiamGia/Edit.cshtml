@model WebBanGiay.Models.Discount

@{
    ViewBag.Title = "Edit";
    ViewBag.Active = "GiamGia";

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Giảm giá /</span> Cập nhật</h4>



@* Form thêm mới *@
<div class="card mb-4">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0"></h5>
        <small class="text-muted float-end"></small>
    </div>
    <div class="card-body">
        <form action="~/Admin/GiamGia/Edit" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <input type="hidden" value="@Model.Discount_Id" />
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-name">Mã giảm giá</label>
                <div class="col-sm-10">
                    @*@Html.EditorFor(model => model.Discount_Id, new { htmlAttributes = new { @class = "form-control" } })*@
                    <input type="text" min="1" name="Discount_Code" value="@Model.Discount_Code" required class="form-control" />

                    @Html.ValidationMessageFor(model => model.Discount_Code, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-name">Số lượng</label>
                <div class="col-sm-10">
                    @*@Html.EditorFor(model => model.Discount_Quantity, new { htmlAttributes = new { @class = "form-control" } })*@
                    <input type="number" min="1" name="Discount_Quantity" value="@Model.Discount_Quantity" required class="form-control" />
                    @Html.ValidationMessageFor(model => model.Discount_Quantity, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-name">Phần trăm</label>
                <div class="col-sm-10">
                    @*@Html.EditorFor(model => model.Discount_Quantity, new { htmlAttributes = new { @class = "form-control" } })*@
                    <input type="number" min="0" max="100" name="Discount_Percent" value="@Model.Discount_Percent" required class="form-control" />
                    @Html.ValidationMessageFor(model => model.Discount_Percent, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-name">Trạng thái</label>
                <div class="col-sm-10">
                    @{
                        if (Model.Type == true)
                        {
                            <input type="checkbox" name="type" value="true" checked />

                        }
                        else
                        {
                            <input type="checkbox" name="type" value="false" />
                        }
                    }
                </div>
            </div>

            <div class="row justify-content-end">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            </div>
        </form>


    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "DanhSach")
</div>
