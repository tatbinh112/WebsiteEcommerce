@model IEnumerable<WebBanGiay.Models.Brand>

@{
    ViewBag.Title = "Danh Sách Nhãn Hàng";
    ViewBag.Active = "NhanHang";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Nhãn Hàng /</span> Danh sách</h4>
<p class="createNew">
    @*@Html.ActionLink("Create New", "Create" )*@
    <a href="~/Admin/NhanHang/ThemMoi">
        <button type="button" class="btn btn-primary">Thêm mới</button>
    </a>
</p>
<div class="card">
    <h5 class="card-header"></h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <tr>
                <th>
                    Tên Nhãn Hàng
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand_Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Brand_Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Brand_Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
